<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<GridPane fx:controller="com.example.ejerciciob.ejercicioBController"
          xmlns:fx="http://javafx.com/fxml"
          hgap="10" vgap="10" alignment="CENTER">

    <!-- Label for Name -->
    <Label text="Nombre:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
    <TextField fx:id="nombreField" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

    <!-- Label for Surname -->
    <Label text="Apellidos:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="apellidosField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

    <!-- Label for Age -->
    <Label text="Edad:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="edadField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <!-- Add Person Button -->
    <Button text="Agregar Persona" onAction="#handleAgregarPersona" GridPane.columnIndex="1" GridPane.rowIndex="3"/>

    <!-- TableView to display Persons -->
    <TableView fx:id="personTable" GridPane.columnIndex="0" GridPane.columnSpan="2" GridPane.rowIndex="4">
        <columns>
            <TableColumn text="Nombre" fx:id="nombreColumn"/>
            <TableColumn text="Apellidos" fx:id="apellidosColumn"/>
            <TableColumn text="Edad" fx:id="edadColumn"/>
        </columns>
    </TableView>

    <!-- Tooltip for form validation -->
    <Tooltip text="Por favor, complete todos los campos y asegúrese de que la edad sea un número válido."
             GridPane.columnIndex="1" GridPane.rowIndex="3"/>

</GridPane>

